extends layout

block content
  .main.container
    .row
      .tabbable
        .tab-content.no-border.padding-24
          #home.tab-pane.in.active
            .row
              .col-xs-12.col-sm-3.center
                br
                br
                if avatar==''
                  img.social-avatar(style='width: 100%' src='https://i.imgur.com/uYq21Ou.png')
                else
                  img(style='width: 100%' src=avatar)
                .space.space-4
              .col-xs-12.col-sm-9
                h4.blue
                  span.middle #{user.name}
                .profile-user-info
                  .profile-info-row
                    .profile-info-name Email 
                      i.fa.fa-envelope.white
                    .profile-info-value
                      span #{user.email}
                  .profile-info-row
                    .profile-info-name Age 
                      i.fa.fa-calendar.white
                    .profile-info-value
                      span #{user.age}
                  .profile-info-row
                    .profile-info-name  Address 
                      i.fa.fa-map-marker.white
                    .profile-info-value
                      span #{user.address}
                  .profile-info-row
                    .profile-info-name Gender 
                      if user.gender == 'Female'
                        i.fa.fa-female.white
                      else
                        i.fa.fa-male.white
                    .profile-info-value
                      span #{user.gender}
                  .profile-info-row
                    .profile-info-name Ocupation 
                      i.fa.fa-cogs.white
                    .profile-info-value
                      span #{user.profession}
                  .profile-info-row
                    .profile-info-name Cellphone 
                      i.fa.fa-phone.white
                    .profile-info-value
                      span #{user.cnumber}
                  .profile-info-row
                    .profile-info-name Type 
                      i.fa.fa-flag.white
                    .profile-info-value
                      span #{user.type}
            .space-20
            br
            br
            .row
              .col-xs-20.col-sm-10
                .widget-box.transparent
                  .widget-header.widget-header-small
                    h4.widget-title.smaller
                      i.ace-icon.fa.fa-check-square-o.bigger-110
                      | 										Little About Me
                  .widget-body
                    .widget-main
                      p #{user.about}
                        span #{user.aboutme}